<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#015a78"
    tools:context=".correo_Activity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="172dp"
        android:background="#012a39"
        android:text="Regresar"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="475dp" />
    <!-- Name Label -->

    <android.support.design.widget.TextInputLayout
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="244dp">

        <TextView
            android:id="@+id/input_correo"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Correo"
            android:inputType="textPersonName"
            android:paddingBottom="10dp"
            android:textSize="17sp" />
    </android.support.design.widget.TextInputLayout>

    <!-- Address Label -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp">

        <EditText
            android:id="@+id/input_ncorreo"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="Cambiar correo"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="101dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="107dp"
        android:background="@drawable/adasdasd" />

    <Button
        android:id="@+id/buttonok"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="238dp"
        android:background="#012a39"
        android:text="OK"
        android:textColor="@android:color/background_light" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="151dp"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="17dp"
        app:srcCompat="@drawable/cautela2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="230dp"
        android:layout_height="98dp"
        android:layout_alignStart="@+id/button"
        android:layout_alignTop="@+id/imageView7"
        android:text="Correo electrÃ³nico donde se envia la imagen captada por el sistema de seguridad"
        android:textSize="18sp" />

</RelativeLayout>