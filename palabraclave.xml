<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#015a78"
    tools:context=".palabraclave_Activity">
    <!-- Name Label -->

    <android.support.design.widget.TextInputLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView7"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="227dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Palabra clave"
            android:inputType="text"
            android:paddingBottom="20dp"
            android:text="-------"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>

    <!-- Address Label -->

    <Button
        android:id="@+id/buttonok"
        android:layout_width="207dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="265dp"
        android:background="#012a39"
        android:text="Generar palabra"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="323dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="139dp"
        android:text="Cambiar palabra clave para reconocimiento de voz"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="161dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="123dp"
        android:layout_height="128dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/cautela2"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="439dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonok"
        android:layout_marginBottom="200dp"
        android:background="#012a39"
        android:text="OK"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="391dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonok"
        android:layout_alignTop="@+id/button"
        android:background="#012a39"
        android:text="Regresar"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="391dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="191dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="      PALABRA CLAVE :"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="103dp"
        android:layout_height="163dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="81dp"
        app:srcCompat="@drawable/micro3" />
</RelativeLayout>