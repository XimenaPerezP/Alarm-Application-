<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#015a78"
    android:fitsSystemWindows="true"
    android:id="@+id/root">


    <!-- Name Label -->

    <!-- Address Label -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="213dp">

        <EditText
            android:id="@+id/input_contranueva"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Contraseña nueva"
            android:inputType="textPassword"
            android:maxLength="4"

            android:paddingTop="30dp"
            android:textColor="@android:color/white" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/input_contranueva2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repetir contraseña nueva"
            android:inputType="textPassword"
            android:maxLength="4"
            android:textColor="@android:color/white" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="94dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="83dp"
        android:background="@drawable/pass3" />

    <Button
        android:id="@+id/buttonok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="188dp"
        android:layout_marginStart="66dp"
        android:background="#012a39"
        android:text="OK"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/buttoncancel"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView9"
        android:layout_alignTop="@+id/buttonok"
        android:background="#012a39"
        android:text="Regresar"
        android:textColor="@android:color/background_light" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="166dp"
        android:layout_height="108dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/cautela2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="245dp"
        android:layout_height="103dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:layout_toEndOf="@+id/buttonok"
        android:text="Cambiar contraseña sistema de seguridad y detección de gas. Números  0-9 y letras a - d permitidas. No ingresar mayúsculas. " />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/TextView_PwdProblem"
        android:textStyle="bold"
        android:gravity="center"/>

</RelativeLayout>